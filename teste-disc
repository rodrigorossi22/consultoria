  <script>
    function calculateResults() {
      const answers = {};
      for (let i = 1; i <= 30; i++) {
        const selected = document.querySelector(`input[name="q${i}"]:checked`);
        if (selected) {
          answers[`q${i}`] = selected.value;
        } else {
          alert("Por favor, responda todas as perguntas.");
          return;
        }
      }

      const scores = { D: 0, I: 0, S: 0, C: 0 };
      for (const key in answers) {
        scores[answers[key]]++;
      }

      let profile = '';
      let summary = '';
      let strengths = '';
      let developmentAreas = '';
      let interpersonalRelations = '';
      let decisionMaking = '';
      let mainMotivator = '';
      let secondaryMotivator = '';

      if (scores.D > scores.I && scores.D > scores.S && scores.D > scores.C) {
        profile = 'Dominante (D)';
        summary = 'Você é uma pessoa determinada, direta e orientada para resultados. Gosta de desafios e não tem medo de assumir riscos.';
        strengths = '- Liderança natural;<br>- Capacidade de resolver problemas rapidamente;<br>- Foco em metas e resultados.';
        developmentAreas = '- Pode ser impulsivo(a) ou autoritário(a);<br>- Dificuldade em lidar com ambiguidades;<br>- Precisa desenvolver mais paciência.';
        interpersonalRelations = 'Interage de forma assertiva e direta, mas pode parecer impaciente em situações que exigem muita reflexão.';
        decisionMaking = 'Toma decisões rápidas e baseadas em resultados imediatos.';
        mainMotivator = 'Alcançar metas ambiciosas e ser reconhecido(a).';
        secondaryMotivator = 'Criar conexões e inspirar outras pessoas.';
      } else if (scores.I > scores.D && scores.I > scores.S && scores.I > scores.C) {
        profile = 'Influente (I)';
        summary = 'Você é extrovertido(a), entusiasmado(a) e adora interagir com as pessoas. Sua energia contagiante e criatividade são grandes diferenciais.';
        strengths = '- Habilidade para motivar e engajar;<br>- Criatividade e pensamento inovador;<br>- Facilidade em criar redes de relacionamento.';
        developmentAreas = '- Pode ser distraído(a) ou disperso(a);<br>- Dificuldade em lidar com rotinas monótonas;<br>- Precisa desenvolver mais foco e disciplina.';
        interpersonalRelations = 'Interage de forma calorosa e amigável, valorizando conexões interpessoais.';
        decisionMaking = 'Toma decisões baseadas no consenso e na colaboração com os outros.';
        mainMotivator = 'Criar conexões e inspirar outras pessoas.';
        secondaryMotivator = 'Promover harmonia e equilíbrio na vida.';
      } else if (scores.S > scores.D && scores.S > scores.I && scores.S > scores.C) {
        profile = 'Estável (S)';
        summary = 'Você é gentil, paciente e valoriza a harmonia em suas relações. Prefere ambientes tranquilos e previsíveis, onde possa contribuir de forma constante.';
        strengths = '- Empatia e sensibilidade;<br>- Lealdade e comprometimento;<br>- Estabilidade emocional.';
        developmentAreas = '- Pode ser resistente a mudanças;<br>- Dificuldade em expressar descontentamento;<br>- Precisa desenvolver mais assertividade.';
        interpersonalRelations = 'Interage de forma calma e empática, buscando evitar conflitos.';
        decisionMaking = 'Toma decisões refletidas e baseadas nas consequências para os outros.';
        mainMotivator = 'Promover harmonia e equilíbrio na vida.';
        secondaryMotivator = 'Aperfeiçoar habilidades e garantir precisão.';
      } else if (scores.C > scores.D && scores.C > scores.I && scores.C > scores.S) {
        profile = 'Conformidade (C)';
        summary = 'Você é detalhista, organizado(a) e valoriza a precisão. Sente-se confortável em ambientes estruturados, onde pode seguir regras e padrões claros.';
        strengths = '- Atento(a) aos detalhes;<br>- Preocupado(a) com qualidade e excelência;<br>- Confiável e consistente.';
        developmentAreas = '- Pode ser perfeccionista demais;<br>- Dificuldade em lidar com incertezas;<br>- Precisa desenvolver mais flexibilidade.';
        interpersonalRelations = 'Interage de forma formal e lógica, priorizando clareza e precisão.';
        decisionMaking = 'Toma decisões baseadas em dados, fatos e análise crítica.';
        mainMotivator = 'Aperfeiçoar habilidades e garantir precisão.';
        secondaryMotivator = 'Alcançar metas ambiciosas e ser reconhecido(a).';
      }

      document.getElementById('profile-summary').innerHTML = `<strong>Perfil Predominante:</strong> ${profile}<br>${summary}`;
      document.getElementById('strengths').innerHTML = strengths;
      document.getElementById('development-areas').innerHTML = developmentAreas;
      document.getElementById('interpersonal-relations').innerHTML = interpersonalRelations;
      document.getElementById('decision-making').innerHTML = decisionMaking;
      document.getElementById('main-motivator').innerHTML = mainMotivator;
      document.getElementById('secondary-motivator').innerHTML = secondaryMotivator;

      document.getElementById('results').style.display = 'block';
    }
  </script>
